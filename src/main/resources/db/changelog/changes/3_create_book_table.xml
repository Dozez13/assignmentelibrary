<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="create_book_table" author="Pavlo Manuilenko">
        <preConditions>
            <not>
                <tableExists tableName="book"/>
            </not>
        </preConditions>
        <createTable tableName="book">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="book_id_pk"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="publishing_year" type="smallint"/>
            <column name="genre" type="enum('ADVENTURE','FANTASY','SCIENCE_FICTION')"/>
            <column name="pdf_preview_file_location_path" type="varchar(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>