<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="create_book_preview_table" author="Pavlo Manuilenko">
        <preConditions>
            <not>
                <tableExists tableName="book_preview"/>
            </not>
        </preConditions>
        <createTable tableName="book_preview">
            <column name="book_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="book_preview_id_pk"/>
            </column>
            <column name="pdf_file_location_path" type="varchar(255)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="book_preview" baseColumnNames="book_id"
                                 constraintName="book_preview_book_id_fk"
                                 referencedTableName="book"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>